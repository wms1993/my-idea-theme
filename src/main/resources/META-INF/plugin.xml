<idea-plugin>
    <id>com.github.wms1993.myideatheme</id>
    <name>my-idea-theme</name>
    <vendor>wms1993</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.wms1993.myideatheme.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.wms1993.myideatheme.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.wms1993.myideatheme.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
